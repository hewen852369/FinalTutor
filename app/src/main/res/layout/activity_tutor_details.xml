<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/card_vertical_margin"
    android:layout_marginBottom="@dimen/card_vertical_margin"
    android:id="@+id/Details_Card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- User avatar -->
        <LinearLayout
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_black_48dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:id="@+id/tutor_pic"
                android:layout_weight="0.24" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="0.43">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject:"
                    android:textSize="@dimen/sub_text_size"
                    android:id="@+id/tv_subject"
                    android:layout_above="@+id/textView16"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Students:"
                    android:textSize="@dimen/sub_text_size"
                    android:id="@+id/tv_numStudents"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="name"
                    android:id="@+id/TVname"
                    android:textColor="@color/my_black"
                    android:textStyle="bold"
                    android:textSize="@dimen/tutor_details_name_text_size"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="subject"
                    android:id="@+id/TVsubject"
                    android:layout_alignBaseline="@+id/tv_subject"
                    android:layout_alignBottom="@+id/tv_subject"
                    android:layout_toRightOf="@+id/tv_subject"
                    android:layout_toEndOf="@+id/tv_subject"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/my_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="##"
                    android:id="@+id/TVnumStudents"
                    android:textColor="@color/my_black"
                    android:layout_alignBaseline="@+id/tv_numStudents"
                    android:layout_alignBottom="@+id/tv_numStudents"
                    android:layout_toRightOf="@+id/tv_numStudents"
                    android:layout_toEndOf="@+id/tv_numStudents"
                    android:layout_marginLeft="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Address:"
                    android:id="@+id/textView16"
                    android:layout_above="@+id/textView17"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Price:"
                    android:id="@+id/textView17"
                    android:layout_above="@+id/tv_numStudents"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="1111 Somewhere Dr."
                    android:id="@+id/tv_tutorAddress"
                    android:textColor="#000000"
                    android:layout_below="@+id/TVsubject"
                    android:layout_toRightOf="@+id/textView16"
                    android:layout_toEndOf="@+id/textView16"
                    android:layout_marginLeft="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="##"
                    android:id="@+id/tv_tutorPrice"
                    android:textColor="#000000"
                    android:layout_alignBaseline="@+id/textView17"
                    android:layout_alignBottom="@+id/textView17"
                    android:layout_toRightOf="@+id/textView17"
                    android:layout_toEndOf="@+id/textView17"
                    android:layout_marginLeft="16dp" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/card_divider" />

        <TextView
            android:padding="@dimen/activity_horizontal_margin"
            android:id="@+id/tv_bio"
            android:text="Brief Tutor Bio.."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/card_divider" />

        <!-- User Actions -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/yak_action_margin"
            android:weightSum="1"
            android:id="@+id/...">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:id="@+id/tutorRatingBar"
                android:isIndicator="true"
                android:numStars="5"
                android:layout_margin="5dp"
                android:layout_weight="1.76" />




            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageCallButton"
                android:src="@drawable/ic_phone_black_24dp"
                android:background="@color/cardview_light_background"
                android:clickable="true"
                android:baselineAlignBottom="false"
                android:layout_alignTop="@+id/tutorRatingBar"
                android:layout_toLeftOf="@+id/imageTextButton"
                android:layout_toStartOf="@+id/imageTextButton"
                android:layout_marginRight="11dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageTextButton"
                android:src="@drawable/ic_message_black_24dp"
                android:background="@color/cardview_light_background"
                android:clickable="true"
                android:layout_alignTop="@+id/imageCallButton"
                android:layout_toLeftOf="@+id/imageEmailButton"
                android:layout_toStartOf="@+id/imageEmailButton"
                android:layout_marginRight="11dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageEmailButton"
                android:src="@drawable/ic_email_black_24dp"
                android:background="@color/cardview_light_background"
                android:clickable="true"
                android:baselineAlignBottom="false"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageLocationButton"
                android:layout_toStartOf="@+id/imageLocationButton"
                android:layout_marginRight="3dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageLocationButton"
                android:src="@drawable/ic_location_button"
                android:background="@color/cardview_light_background"
                android:clickable="true"
                android:baselineAlignBottom="false"

                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />




        </RelativeLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/card_divider" />

        <!-- User Actions -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/yak_action_margin"
            android:weightSum="1"
            android:id="@+id/....">


            <Button
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create/Edit Review"
                android:id="@+id/Breview"
                android:layout_alignTop="@+id/viewReviews"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Reviews"
                android:id="@+id/viewReviews"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>